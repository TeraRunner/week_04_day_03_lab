<form method="post" action="/hogwarts/student-index">

  <label for="first-name-field">First Name:</label>
  <input type="text" name="first_name" id="first-name-field"/>

  <label for="second-name-field">Second Name:</label>
  <input type="text" name="second_name" id="second-name-field"/>

  <label for="house-field">House:</label>
  <select name="house_id" id="house-field">
    <option value="1">Gryffindor</option>
    <option value="2">Slytherin</option>
    <option value="3">Ravenclaw</option>
    <option value="4">Hufflepuff</option>
  </select>

  <label for="age-field">Age:</label>
  <input type="number" name="age" id="age-field"/>
  <input type="submit" value="Create Student">

</form>
